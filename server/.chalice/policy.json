{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": ["logs:CreateLogGroup", "logs:CreateLogStream", "logs:PutLogEvents"],
      "Effect": "Allow",
      "Resource": "arn:*:logs:*:*:*"
    },
    {
      "Action": ["s3:ListBucket"],
      "Effect": "Allow",
      "Resource": ["arn:aws:s3:::tm-mbta-performance"]
    },
    {
      "Action": ["s3:GetObject"],
      "Effect": "Allow",
      "Resource": ["arn:aws:s3:::tm-mbta-performance/*"]
    },
    {
      "Action": ["dynamodb:Query"],
      "Effect": "Allow",
      "Resource": [
        "arn:aws:dynamodb:*:*:table/DailySpeed",
        "arn:aws:dynamodb:*:*:table/DailyTrips",
        "arn:aws:dynamodb:*:*:table/WeeklySpeed",
        "arn:aws:dynamodb:*:*:table/MonthlySpeed",
        "arn:aws:dynamodb:*:*:table/TripCounts",
        "arn:aws:dynamodb:*:*:table/Ridership"
      ]
    }
  ]
}
